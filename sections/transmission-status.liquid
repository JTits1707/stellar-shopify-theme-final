{% comment %}
  Stellar Reverb — Transmission Status (Placeholder)
{% endcomment %}

<section class="transmission-status" style="background:#0D0D0D; padding:30px; text-align:center; color:#28A8D6;">
  <h2>{{ section.settings.heading | default: "Current Transmission Status" }}</h2>
  <div style="display:grid; grid-template-columns: repeat(4,1fr); gap:20px; max-width:800px; margin:20px auto;">
    <div><strong>{{ section.settings.active_capsules }}</strong><p>Active Capsules</p></div>
    <div><strong>{{ section.settings.decoded_fragments }}</strong><p>Decoded Fragments</p></div>
    <div><strong>{{ section.settings.signal_seekers }}</strong><p>Signal Seekers</p></div>
    <div><strong>{{ section.settings.dimensions_mapped }}</strong><p>Dimensions Mapped</p></div>
  </div>
</section>

{% schema %}
{
  "name": "Transmission Status",
  "settings": [
    {
      "type": "number",
      "id": "active_capsules",
      "label": "Active Capsules",
      "default": 10
    },
    {
      "type": "number",
      "id": "decoded_fragments",
      "label": "Decoded Fragments",
      "default": 42
    },
    {
      "type": "number",
      "id": "signal_seekers",
      "label": "Signal Seekers",
      "default": 1247
    },
    {
      "type": "text",
      "id": "dimensions_mapped",
      "label": "Dimensions Mapped",
      "default": "∞"
    }
  ],
  "presets": [
    {
      "name": "Transmission Status"
    }
  ]
}
{% endschema %}