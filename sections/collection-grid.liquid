    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const productGrid = document.getElementById('product-grid');
        const productCards = Array.from(productGrid.querySelectorAll('.product-card'));
        
        let currentCapsuleFilter = 'all';
        let currentTagFilter = 'all';

        // --- FILTERING LOGIC ---
        const filterPills = document.querySelectorAll('.filter-pill');
        filterPills.forEach(pill => {
            pill.addEventListener('click', () => {
                filterPills.forEach(p => p.classList.remove('active'));
                pill.classList.add('active');
                currentCapsuleFilter = pill.dataset.filter;
                applyFilters();
            });
        });

        const motifTags = document.querySelectorAll('.motif-tag');
        motifTags.forEach(tag => {
            tag.addEventListener('click', () => {
                // This allows only one tag to be active at a time for simplicity
                if (tag.classList.contains('active')) {
                    tag.classList.remove('active');
                    currentTagFilter = 'all';
                } else {
                    motifTags.forEach(t => t.classList.remove('active'));
                    tag.classList.add('active');
                    currentTagFilter = tag.dataset.tag;
                }
                applyFilters();
            });
        });

        function applyFilters() {
            productCards.forEach(card => {
                const capsuleMatch = currentCapsuleFilter === 'all' || card.dataset.capsule === currentCapsuleFilter;
                const tagMatch = currentTagFilter === 'all' || card.dataset.tags.includes(currentTagFilter);

                if (capsuleMatch && tagMatch) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        // --- SORTING LOGIC ---
        const sortPills = document.querySelectorAll('.sort-pill');
        sortPills.forEach(pill => {
            pill.addEventListener('click', () => {
                sortPills.forEach(p => p.classList.remove('active'));
                pill.classList.add('active');
                const sortBy = pill.dataset.sort;
                sortProducts(sortBy);
            });
        });

        function sortProducts(criteria) {
            let sortedCards = [...productCards];

            switch (criteria) {
                case 'resonant':
                    sortedCards.sort((a, b) => b.dataset.resonant - a.dataset.resonant);
                    break;
                case 'decoded':
                    // This assumes the original order is newest first.
                    // For a real store, you'd use a timestamp. We'll reverse for now.
                    sortedCards.reverse();
                    break;
                case 'price-high':
                    sortedCards.sort((a, b) => b.dataset.price - a.dataset.price);
                    break;
                case 'price-low':
                    sortedCards.sort((a, b) => a.dataset.price - b.dataset.price);
                    break;
            }
            
            // Re-append sorted cards to the grid
            sortedCards.forEach(card => productGrid.appendChild(card));
        }

        // --- Other Initializations ---
        createConstellation();
        initializeSignalForm();
        
        // Background scaling effect
        const backdrop = document.querySelector('.cosmic-bg');
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            backdrop.style.transform = 'scale(' + (1 + scrolled * 0.0005) + ')';
        });

        // Signal Seeker form interaction
        function initializeSignalForm() {
            const signalInput = document.querySelector('.signal-input');
            const initiateBtn = document.querySelector('.initiate-btn');

            initiateBtn.addEventListener('click', (e) => {
                e.preventDefault();
                if (signalInput.value.trim() && signalInput.checkValidity()) {
                    alert('Signal received! Welcome to the cosmic frequency network.');
                    signalInput.value = '';
                } else {
                    alert('Please enter a valid transmission frequency (email) to join the Signal Seekers.');
                }
            });
        }

        // Dynamic constellation generation
        function createConstellation() {
            const constellation = document.querySelector('.constellation');
            if (!constellation) return;
            for (let i = 0; i < 20; i++) {
                const dot = document.createElement('div');
                dot.className = 'constellation-dot';
                dot.style.top = Math.random() * 100 + '%';
                dot.style.left = Math.random() * 100 + '%';
                dot.style.animationDelay = Math.random() * 3 + 's';
                constellation.appendChild(dot);
            }
        }
    });
    </script>
