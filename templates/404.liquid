.error-404-wrapper {
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 2rem;
  background: radial-gradient(circle, rgba(225,60,250,0.1), transparent);
}

.error-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  max-width: 1000px;
  align-items: center;
}

.signal-lost-icon {
  font-size: 8rem;
  color: var(--neon-magenta);
  text-align: center;
  position: relative;
  animation: signal-interference 2s ease-in-out infinite;
}

.glitch-lines {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 48%, var(--cyan-blue) 49%, var(--cyan-blue) 51%, transparent 52%);
  opacity: 0.3;
  animation: glitch-scan 1.5s linear infinite;
}

@keyframes signal-interference {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-2px); }
  50% { transform: translateX(2px); }
  75% { transform: translateX(-1px); }
}

@keyframes glitch-scan {
  0% { transform: translateY(-100%); }
  100% { transform: translateY(100%); }
}

.error-title {
  font-family: 'Orbitron', monospace;
  font-size: 3rem;
  margin-bottom: 1rem;
}

.error-code {
  color: var(--radioactive-green);
  font-family: 'Orbitron', monospace;
  font-size: 1.2rem;
  margin-bottom: 2rem;
}

@media (max-width: 768px) {
  .error-content { grid-template-columns: 1fr; text-align: center; }
  .signal-lost-icon { font-size: 4rem; }
  .error-title { font-size: 2rem; }
}
