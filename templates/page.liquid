{% comment %}
  Stellar Reverb Page Template
  Generic page template with cosmic styling
{% endcomment %}

<div class="page-container">
  <div class="page-width">
    
    <!-- Page Header -->
    <header class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
      {% if page.content != blank %}
        <div class="page-meta">
          <span class="page-date">{{ page.created_at | date: '%B %d, %Y' }}</span>
          {% if page.author %}
            <span class="page-author">by {{ page.author }}</span>
          {% endif %}
        </div>
      {% endif %}
    </header>
    
    <!-- Page Content -->
    <div class="page-content">
      {{ page.content }}
    </div>
    
  </div>
</div>

<style>
  .page-container {
    padding: 5rem 2rem;
    background: linear-gradient(180deg, var(--void-black), #1a0d2e);
    min-height: 70vh;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--cyan-blue);
  }
  
  .page-title {
    font-family: 'Orbitron', monospace;
    font-size: 3rem;
    font-weight: 900;
    background: linear-gradient(45deg, var(--neon-magenta), var(--cyan-blue));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    text-shadow: 0 0 30px var(--neon-magenta);
  }
  
  .page-meta {
    font-family: 'Orbitron', monospace;
    color: var(--electric-yellow);
    font-size: 0.9rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
  }
  
  .page-content {
    max-width: 800px;
    margin: 0 auto;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.7;
    font-size: 1.1rem;
  }
  
  .page-content h2 {
    font-family: 'Orbitron', monospace;
    color: var(--neon-magenta);
    font-size: 2rem;
    margin: 2rem 0 1rem;
    text-shadow: 0 0 20px var(--neon-magenta);
  }
  
  .page-content h3 {
    font-family: 'Orbitron', monospace;
    color: var(--cyan-blue);
    font-size: 1.5rem;
    margin: 1.5rem 0 0.8rem;
  }
  
  .page-content p {
    margin-bottom: 1.5rem;
  }
  
  .page-content a {
    color: var(--electric-yellow);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .page-content a:hover {
    color: var(--radioactive-green);
    text-shadow: 0 0 10px var(--radioactive-green);
  }
  
  .page-content ul,
  .page-content ol {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .page-content li {
    margin-bottom: 0.5rem;
  }
  
  .page-content blockquote {
    background: rgba(225, 60, 250, 0.1);
    border-left: 4px solid var(--neon-magenta);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .page-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    border: 2px solid var(--cyan-blue);
    margin: 1rem 0;
  }
  
  .page-content code {
    background: rgba(13, 13, 13, 0.8);
    color: var(--radioactive-green);
    padding: 0.2rem 0.4rem;
    border-radius: 0.3rem;
    font-family: 'Courier New', monospace;
  }
  
  .page-content pre {
    background: rgba(13, 13, 13, 0.9);
    border: 1px solid var(--cyan-blue);
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
  }
  
  .page-content pre code {
    background: none;
    padding: 0;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .page-container {
      padding: 3rem 1rem;
    }
    
    .page-title {
      font-size: 2rem;
    }
    
    .page-meta {
      flex-direction: column;
      gap: 0.5rem;
    }
    
    .page-content {
      font-size: 1rem;
    }
  }
</style>
