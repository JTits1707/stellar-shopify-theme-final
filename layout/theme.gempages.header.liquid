<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>
    {{ page_title }}
    {% if current_tags %} â€“ {{ 'general.meta.tags' | t: tags: current_tags.first }}{% endif %}
    {% if current_page != 1 %} â€“ {{ 'general.meta.page' | t: page: current_page }}{% endif %}
    {% unless page_title contains shop.name %} â€“ {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {{ content_for_header }}

  <!-- Cosmic Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Montserrat:wght@300;400;500;700&display=swap" rel="stylesheet">

  <!-- Tailwind + FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.4.0/css/all.min.css">

  <!-- Cosmic Styles (real assets in /assets) -->
  {{ 'stellar-reverb.css' | asset_url | stylesheet_tag }}
  {{ 'cosmic-enhancements.css' | asset_url | stylesheet_tag }}
  {{ 'cosmic-effects.css' | asset_url | stylesheet_tag }}
  {{ 'floating-elements.css' | asset_url | stylesheet_tag }}
  {{ 'modular-capsule-styles.css' | asset_url | stylesheet_tag }}
</head>
<body class="bg-black text-white">

  <!-- Announcement Bar -->
  {% if settings.show_announcement %}
    <div class="announcement-bar bg-gradient-to-r from-pink-600 via-purple-600 to-cyan-500 text-center text-white py-2 text-sm font-orbitron z-50 relative">
      <p class="flex justify-center items-center gap-4">
        ðŸš€ FREE SHIPPING ON ORDERS OVER $75
        {% if settings.announcement_cta %}
          <button class="ml-4 px-4 py-1 bg-white text-black rounded-full text-xs font-bold uppercase tracking-wide hover:bg-cyan-300 hover:text-black transition" data-mailchimp-popup>
            {{ settings.announcement_cta }}
          </button>
        {% endif %}
      </p>
    </div>
  {% endif %}

  <!-- Header -->
  {% section 'header' %}

  <!-- Main Content -->
  <main role="main">
    {{ content_for_layout }}
  </main>

  <!-- Footer -->
  

  <!-- Mailchimp Popup Snippet -->
  

  <!-- Scripts -->
  {{ 'stellar-reverb.js' | asset_url | script_tag }}
  {{ 'stellar-timeline.js' | asset_url | script_tag }}
</body>
</html>